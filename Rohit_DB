CUSTOMER Table:-
------------------------------


CREATE table "CUSTOMER" (
    "CUSTID"     NUMBER(10) NOT NULL,
    "FIRSTNAME"  VARCHAR2(15) NOT NULL,
    "LASTNAME"   VARCHAR2(15) NOT NULL,
    "MOBILENO"   NUMBER(10) NOT NULL,
    "STATUS"	 VARCHAR2(15) NOT NULL,
    constraint  "CUSTOMER_PK" primary key ("CUSTID")
)
/

CREATE sequence "CUSTOMER_SEQ" 
/

CREATE trigger "BI_CUSTOMER"  
  before insert on "CUSTOMER"              
  for each row 
begin  
  if :NEW."CUSTID" is null then
    select "CUSTOMER_SEQ".nextval into :NEW."CUSTID" from dual;
  end if;
end;
/   



DATA:-
-------------------------

insert into CUSTOMER values (101,'Rohit','Roy',9876543210,'Active');
insert into CUSTOMER values (102,'Sarthak','Sengupta',9876543210,'Not Active');
insert into CUSTOMER values (103,'Rahul','Roy',8765941123,'Not Active');
